@model MusicStoreSite.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<section id="loginForm">
    <h2>Log on</h2>
    <p>Please enter your user name and password.  @Html.ActionLink("Register", "Register", new { returnUrl = ViewBag.ReturnUrl }) if you don't have an account. </p>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Account Information</legend>
            <p>
                @Html.LabelFor(m => m.UserName, new { @class = "loginFieldLabel" })
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </p>
            <p>
                @Html.LabelFor(m => m.Password, new { @class = "loginFieldLabel" })
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </p>
            <p>
                <span>
                    @Html.LabelFor(m => m.RememberMe, new { @class = "loginFieldLabel" })
                    @Html.CheckBoxFor(m => m.RememberMe)
                </span>
            </p>
            <input type="submit" value="Log on" />
        </fieldset>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
