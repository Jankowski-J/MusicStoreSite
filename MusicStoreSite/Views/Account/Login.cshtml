@model MusicStoreSite.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<section id="loginForm">
    <h2>Log on</h2>
    <p>Please enter your user name and password.  @Html.ActionLink("Register", "Register") if you don't have an account. </p>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Account Information</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.UserName, new { @class = "loginFieldLabel" })
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password, new { @class = "loginFieldLabel" })
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </li>
                <li>
                    <span>
                        @Html.LabelFor(m => m.RememberMe, new { @class = "loginFieldLabel" })
                        @Html.CheckBoxFor(m => m.RememberMe)
                    </span>
                </li>
            </ol>
            <input type="submit" value="Log in" />
        </fieldset>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
