<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
            <h4 class="modal-title" id="myModalLabel">@ViewBag.Message</h4>
            </div>
            <div class="modal-body">
                <h4>What would You like to do next?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Back to shop</button>
                <button type="button" class="btn btn-primary" id="GoToCartButton">Go to cart</button>
        </div>
    </div>
  </div>
</div>