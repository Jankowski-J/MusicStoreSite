@using System.ComponentModel
@using MusicStoreSite.Models.Contexts
@using MusicStoreSite.Models.Entities
@{
    MusicStoreContext musicStoreContext = new MusicStoreContext();
    List<Genre> categoryList = musicStoreContext.Genres.ToList();
}

@foreach (var category in categoryList)
{
    @Html.ActionLink(category.Name, "Browse", "Store", new {category = category.GenreId}, new {@class="list-group-item"})
}
