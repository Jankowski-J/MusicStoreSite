@using System.ComponentModel
@using MusicStoreSite.Models.Contexts
@{
    MusicStoreContext musicStoreContext = new MusicStoreContext();
    List<string> categoryList = musicStoreContext.Genres.Select(product => product.Name).ToList();
}

@foreach (var category in categoryList)
{
    @Html.ActionLink(category, "Browse", "Store", new {category = category}, new {@class="list-group-item"})
}
